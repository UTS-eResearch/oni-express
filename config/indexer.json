{
  "ocfl": "/etc/share/ocfl",
  "identifierNamespace": "SuccessfulGrantsRepository",
  "uriIds": "identifiers",
  "retries": 10,
  "retryInterval": 10,
  "purge": true,
  "updateSchema": true,
  "dryRun": false,
  "catalogFilename": [ "ro-crate-metadata.jsonld", "ro-crate-metadata.json" ],
  "solrBase": "http://solr:8983/solr/ocfl",
  "hashAlgorithm": "md5",
  "waitPeriod": 0,
  "schemaBase": "/etc/share/config/schema_base.json",

  "logLevel": "info",

  "log": {
    "filename": "/etc/share/logs/indexer.log",
    "level": "info"
  },


  "portal": {
    "base": "/etc/share/config/portal_base.json",
    "config": "/etc/share/config/portal.json",
    "facetDefaults": {
      "limit": 5
    }
  },



  "fields": {
    "main_search": [ "name", "description", "id", "author" ],
    "map_all": {
      "@id": [ "id", "id_orig" ],
      "@type": [ "record_type_s", "type_label" ]
    },

    "licenses": {
      "__default__": "UTS Confidential"
    },

    "types": {

      "Dataset": {
    
        "@id": { 
          "name": "SuccessfulGrantsRepository",
          "filter": { "is_root": true }
        },
        "@reverse": { "skip": true },
 
        "hasPart": [
          {
            "index_as": "html",
            "match": { "@id": { "re": "\\.html" } }
          },
          {
            "index_as": "full_text",
            "match": { "@id": { "re": "\\.txt$" } },
            "load_file": true
          }
        ],

        "hasFile": { "skip": true },
        "temporalCoverage": { "skip": true },

        "license": {
          "multi": true,
          "facet": true
        },

        "licenseOriginal": {
          "multi": true
        },

        "author": {
          "facet": true
        },

        "keywords": {
          "multi": true,
          "facet": {
            "tokenize": { "delim": "[,;]\\s*" }
          }
        },

        "description": {
          "link_rebase": "ocfl"
        },

        "about": [
          {
            "match": { "@id": { "re": "anzsrc-for" } },
            "index_as": "FOR",
            "multi": true,
            "resolve": {
              "search": "@id", 
              "display": "name"
            },
            "facet": true
          }
        ],

        "dateCreated": {
        "facet": true
        }
      }
    }
  }
}
